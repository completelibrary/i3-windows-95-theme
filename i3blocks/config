[battery-label]
command=~/.config/i3blocks/scripts/label BATTERY
interval=once
format=json

[battery]
command=cat /sys/class/power_supply/BAT0/capacity | sed '$s/$/%/'
align=center
min_width=35
interval=5

[volume-label]
command=~/.config/i3blocks/scripts/label VOLUME
interval=once
format=json

[volume]
command=pactl get-sink-volume @DEFAULT_SINK@ | grep 'Volume:' | awk '{print $5}'
align=center
min_width=35
interval=1

[time-label]
command=~/.config/i3blocks/scripts/label TIME
interval=once
format=json

[time]
command=date '+%I:%M %p'
align=center
min_width=75
interval=60

[date-label]
command=~/.config/i3blocks/scripts/label DATE
interval=once
separator_block_width=8
format=json

[date]
command=date '+%a, %B %d'
align=left
min_width=135
interval=3600
